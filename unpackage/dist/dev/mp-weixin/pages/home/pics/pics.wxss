page {
  height: 100%;
}
.pics {
  height: 100%;
  display: flex;
}
.pics .left {
  height: 100%;
  width: 220rpx;
  border-right: 1rpx solid #eee;
}
.pics .left .title {
  height: 120rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 120rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}
.pics .right {
  height: 100%;
  width: 530rpx;
  margin: 0 10rpx;
}
.pics .right image {
  margin: 10rpx 0;
  width: 530rpx;
  border-radius: 10rpx;
}
.pics .right text {
  display: block;
  font-size: 30rpx;
  color: #333;
  line-height: 60rpx;
}
.active {
  background-color: #b50103;
  color: #fff !important;
}
.message {
  font-size: 60rpx;
  text-align: center;
  line-height: 120rpx;
  color: #999999;
}

