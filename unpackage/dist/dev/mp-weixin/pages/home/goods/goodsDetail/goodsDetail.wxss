.top {
  padding: 15rpx;
  border-bottom: 5px solid #eee;
}
.top .new-price {
  margin-right: 20rpx;
  font-size: 40rpx;
  color: #b50103;
}
.top .old-price {
  font-size: 32rpx;
  color: #ccc;
  text-decoration: line-through;
}
.top .title {
  font-size: 36rpx;
  margin: 10rpx 0;
  line-height: 50rpx;
}
.middle {
  line-height: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-bottom: 5px solid #eee;
  padding: 15rpx;
  font-size: 32rpx;
}
.bottom {
  padding: 15rpx;
}
.bottom .title {
  font-size: 36rpx;
  text-align: center;
  line-height: 60rpx;
  border-bottom: 1px solid #eee;
}
.bottom .content {
  font-size: 28rpx;
